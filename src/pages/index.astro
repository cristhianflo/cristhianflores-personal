---
import "../styles/global.css";
import NavMenu from "../components/NavMenu";
import ExperienceCard from "../components/ExperienceCard.astro";
import ProjectCard from "../components/ProjectCard.astro";
import SkillList from "../components/SkillList";
import SocialLinks from "../components/SocialLinks.astro";
import { siAstro, siTailwindcss } from "simple-icons";
import SimpleIcon from "../components/SimpleIcon";
import RightArrowAlt from "../icons/right-arrow-alt.svg";

const years = new Date().getFullYear() - 2023;

const navItems = [
  { href: "#about-me", label: "Sobre mí" },
  { href: "#work-experience", label: "Experiencia laboral" },
  { href: "#projects", label: "Proyectos" },
  { href: "#skills", label: "Habilidades" },
];

const experience = [
  {
    position: "Desarrollador Fullstack",
    company: "TailorSheet",
    location: "Remoto",
    startDate: "Dic. 2023",
    endDate: "Presente",
    description:
      "Colaboración continua con TailorSheet desarrollando soluciones personalizadas que incluyen: el desarrollo de un plugin personalizado de WordPress incluyendo widgets de Elementor que mejoró los tiempos de carga de páginas criticas en un 85%, organicé más de 100 páginas con una taxonomía personalizada, y creé varias páginas corporativas optimizadas para SEO, velocidad y diseño responsive. Además, implementé una galería de imágenes en Laravel + React con subida múltiple y autenticación que sustituyó servicios externos, ahorrando 180 USD anuales, y unifiqué todo en un ecosistema coherente y escalable.",
    technologies: [
      "PHP",
      "WordPress",
      "Laravel",
      "CSS",
      "TailwindCSS",
      "JavaScript",
      "TypeScript",
      "React",
      "JQuery",
    ],
  },
  {
    position: "Desarrollador WordPress",
    company: "Freelance",
    location: "Remoto",
    startDate: "Jun. 2023",
    endDate: "Dic. 2023",
    description:
      "Brindé soporte técnico, optimización y corrección de errores para múltiples sitios WordPress de pymes, resolviendo bugs críticos y problemas de rendimiento en plazos de 1 a 3 semanas, mejorando SEO, tiempos de carga y seguridad, y manteniendo los proyectos mediante actualizaciones, hardening y mejoras continuas en la experiencia de usuario.",
    technologies: ["PHP", "WordPress", "CSS", "JavaScript", "JQuery"],
  },
  {
    position: "Desarrollador Fullstack",
    company: "Freelance",
    location: "Remoto",
    startDate: "Mar. 2023",
    endDate: "Jun. 2023",
    description:
      "Desarrollé una Single Page Application para la gestión de horarios de profesores usando VueJS, TailwindCSS y TypeScript, junto con un backend en PocketBase que manejó autenticación, permisos y base de datos; optimicé tiempos de carga y usabilidad con una UI responsiva y gestioné el proyecto de principio a fin, definiendo hitos, entregables y el despliegue final.",
    technologies: ["VueJS", "TypeScript", "TailwindCSS", "PocketBase"],
  },
];

const projects = [
  {
    title: "Bachacode Developers",
    description:
      "Sitio web personal de mi trabajo como freelancer para la captación de clientes.",
    thumbnail: {
      src: "/bachacode-developers.webp",
      alt: "Diseño de páginas web & aplicaciones para negocios pequeños",
    },
    technologies: ["Next.Js", "TailwindCSS", "Node.Js"],
    url: "https://bachacode.com/es",
    repositoryUrl:
      "https://github.com/bachacode-developers/bachacode-developers",
  },
  {
    title: "Intérprete de lenguaje Bachalang",
    description:
      "Proyecto experimental que implementa un intérprete de un lenguaje de programación personalizado llamado Bachalang, desarrollado en PHP y con implementaciones de variables, funciones, ciclos, condicionales y mucho más.",
    technologies: ["PHP"],
    repositoryUrl: "https://github.com/cristhianflo/php-interpreter-bachalang",
  },
  {
    title: "Intérprete matemático",
    description:
      "Proyecto educativo que implementa un intérprete matemático escrito en C, enfocado en el procesamiento y evaluación de expresiones aritméticas. El proyecto explora conceptos de bajo nivel como manejo manual de memoria, estructuras de datos, parsing y evaluación de expresiones.",
    technologies: ["Lenguaje C"],
    repositoryUrl: "https://github.com/cristhianflo/c-math-interpreter",
  },
  {
    title: "Bot de Discord",
    description:
      "Bot de Discord escrito en Golang, diseñado para gestionar administración básica como asignación de roles a nuevos usuarios, mensajes de bienvenida y comunicación con APIs externas a través de comandos de Discord.",
    technologies: ["Golang", "Docker"],
    repositoryUrl: "https://github.com/cristhianflo/gatoc",
  },
];
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Cristhian Flores</title>
  </head>
  <body
    class="flex flex-col items-center bg-zinc-900 font-mono text-zinc-100 antialiased"
  >
    <main
      class="container flex min-h-screen flex-col px-6 py-16 lg:flex-row-reverse lg:px-12 lg:py-0"
    >
      <aside
        class="lg:sticky lg:top-0 lg:h-screen lg:w-5/12 lg:items-end lg:py-24 lg:text-right"
      >
        <div class="flex h-full w-10/12 flex-col gap-6">
          <div class="space-y-4">
            <div class="space-y-2">
              <h1 class="text-4xl font-bold">Cristhian Flores</h1>
              <p class="text-xl font-semibold">Fullstack Developer</p>
            </div>
            <p class="text-zinc-400">
              Desarrollador web con más de {years} años de experiencia creando aplicaciones
              profesionales
            </p>
          </div>

          <!-- Navigation menu  -->
          <NavMenu items={navItems} client:load />

          <!-- Social links -->
          <SocialLinks />
        </div>
      </aside>
      <div class="w-full text-zinc-300 lg:w-7/12">
        <!-- About me -->
        <section class="scroll-mt-16 py-16 lg:py-24" id="about-me">
          <h2
            class="text-md pb-3 tracking-widest text-amber-400 uppercase lg:sr-only lg:hidden"
          >
            Sobre mí
          </h2>
          <p>
            Soy un desarrollador web bilingüe con inglés C1 y más de dos años
            trabajando como freelance, creando aplicaciones con React, Vue y
            lenguajes como PHP, JavaScript, TypeScript y Golang. He llevado
            adelante más de diez proyectos para pymes y emprendedores, cuidando
            el rendimiento, el SEO y la experiencia del usuario. También he
            trabajado con plataformas en la nube como DigitalOcean y AWS, tanto
            en trabajos profesionales como en proyectos personales que me han
            permitido seguir aprendiendo y experimentando.
          </p>

          <p
            class="my-4 border border-amber-400 bg-amber-900/10 p-4 text-amber-400"
          >
            Estudié en la U.P.T.P “Luis Mariano Rivera”, donde obtuve el título
            de Técnico Superior Universitario en Informática entre 2019 y 2022.
            Fue una etapa que me dio una base sólida en programación y
            desarrollo, y que luego complementé con mucha práctica real
            construyendo proyectos por mi cuenta.
          </p>

          <p>
            En mi tiempo libre suelo trastear con Linux en mi computadora
            personal, y en el resto del tiempo libre me toca resolver los
            problemas que me causé por andar trasteando con Linux…
          </p>
        </section>
        <section class="scroll-mt-16 pb-16 lg:pb-24" id="work-experience">
          <h2
            class="text-md pb-3 tracking-widest text-amber-400 uppercase lg:sr-only lg:hidden"
          >
            Experiencia Laboral
          </h2>
          <div class="group/experience-list flex flex-col gap-8">
            {
              experience.map((job) => (
                <ExperienceCard
                  position={job.position}
                  company={job.company}
                  startDate={job.startDate}
                  endDate={job.endDate}
                  location={job.location}
                  description={job.description}
                  technologies={job.technologies}
                />
              ))
            }
          </div>
        </section>
        <section class="scroll-mt-16" id="projects">
          <h2
            class="text-md pb-3 tracking-widest text-amber-400 uppercase lg:sr-only lg:hidden"
          >
            Proyectos
          </h2>
          <div class="group/project-list flex flex-col gap-8">
            {
              projects.map((project) => (
                <ProjectCard
                  title={project.title}
                  description={project.description}
                  thumbnail={project.thumbnail}
                  technologies={project.technologies}
                  url={project.url}
                  repositoryUrl={project.repositoryUrl}
                />
              ))
            }
          </div>
        </section>
        <section class="scroll-mt-16 pt-16 pb-8 lg:pt-24 lg:pb-16" id="skills">
          <h2
            class="text-md pb-3 tracking-widest text-amber-400 uppercase lg:sr-only lg:hidden"
          >
            Habilidades
          </h2>
          <SkillList client:load />
        </section>
        <div class="pb-16 lg:pb-24">
          <p class="pb-4">Si quieres saber mas sobre mí...</p>
          <a
            class="group text-zinc-100 transition-colors hover:text-amber-400"
            rel="noreferrer noopener"
            target="_blank"
            href="/resume-ES.pdf"
            aria-label="Astro (abre en una nueva pestaña)"
            >Ver currículum
            <RightArrowAlt
              width={20}
              height={20}
              style={{
                display: "inline-block",
                verticalAlign: "middle",
                fill: "currentColor",
              }}
              class="hover transition-transform group-hover:translate-x-1.5"
            />
          </a>
        </div>

        <footer class="pb-16 text-zinc-400 lg:pb-24">
          Hecho con <a
            class="text-sm text-zinc-100 transition-colors hover:text-amber-400"
            rel="noreferrer noopener"
            target="_blank"
            href="https://astro.build/"
            aria-label="Astro (abre en una nueva pestaña)"
            ><SimpleIcon icon={siAstro} className="pr-2" />Astro</a
          > y <a
            class="text-sm text-zinc-100 transition-colors hover:text-amber-400"
            rel="noreferrer noopener"
            target="_blank"
            href="https://tailwindcss.com/"
            aria-label="TailwindCSS (abre en una nueva pestaña)"
            ><SimpleIcon icon={siTailwindcss} className="pr-2" />Tailwind CSS</a
          >. Diseño inspirado en el sitio web <a
            class="text-sm text-zinc-100 transition-colors hover:text-amber-400"
            rel="noreferrer noopener"
            target="_blank"
            aria-label="Brittany Chiang (abre en una nueva pestaña)"
            href="https://brittanychiang.com/">Brittany Chiang</a
          >
        </footer>
      </div>
    </main>
  </body>
</html>
